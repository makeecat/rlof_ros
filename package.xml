<?xml version="1.0"?>
<package format="3">

    <!-- Package Information -->
    <name>rlof_ros</name>
    <version>1.0.0</version>
    <description>
        rlof ros wrapper
    </description>

    <!-- Code Authors -->
    <author email="yangzhou.info@gmail.com">Yang Zhou</author>
    <maintainer email="yangzhou.info@gmail.com">Yang Zhou</maintainer>

    <!-- Licensing -->
    <license>GNU General Public License v3.0</license>

    <!-- ROS1: Dependencies needed to compile this package. -->
    <buildtool_depend condition="$ROS_VERSION == 1">catkin</buildtool_depend>
    <depend condition="$ROS_VERSION == 1">cv_bridge</depend>


    <!-- ROS2: Dependencies needed to compile this package. -->
    <buildtool_depend condition="$ROS_VERSION == 2">ament_cmake</buildtool_depend>



    <!-- Note the export is required to expose the executables -->
    <export>
        <build_type condition="$ROS_VERSION == 1">catkin</build_type>
        <build_type condition="$ROS_VERSION == 2">ament_cmake</build_type>
    </export>

</package>
